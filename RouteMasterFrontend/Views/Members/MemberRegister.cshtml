@model RouteMasterFrontend.Models.ViewModels.Members.MemberRegisterVM

@{
    ViewData["Title"] = "MemberRegister";
}

@section Styles{
    <style>
        .img-container 
        {
            display: flex; /* 將內容水平排列 */
            gap: 10px; /* 圖片之間的間距 */
        }

     
    </style>
}
<h1>MemberRegister</h1>

<h4>MemberRegisterVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MemberRegister" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CellPhoneNumber" class="control-label"></label>
                <input asp-for="CellPhoneNumber" class="form-control" />
                <span asp-validation-for="CellPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Gender" /> @Html.DisplayNameFor(model => model.Gender)
                </label>
            </div>
            <div class="gorm-group"> 
                <label asp-for="Image" class="control-label"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="form-check">
                    <input type="file" name="facePhoto" multiple="multiple" accept="image/*" />
                    <label class="form-check-label" for="flexRadioDefault1">
                        Default radio
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" id="radioA" name="option" value="A">Option A<br>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Default checked radio
                    </label>
                </div>

            </div>
          @*  <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input type="file" name="facePhoto" multiple="multiple" accept="image/*" />
                <input type="hidden" id="imageNameInput" name="ImageName" value="" />              
            </div>*@

            <div id="divA" style="display: none;">
                <h3>Div A Content</h3>
                <li><img src="~/SystemImages/2c36c1ae24444c9d92c5d94e5c69ee91.png" id="imageId" class="default-image imgs" alt="預設圖片 1" width="100" height="100" /></li>
                <li><img src="~/SystemImages/30519bf58a6d4eefa1b9d6c55d2d2f45.png" class="default-image imgs" alt="預設圖片 2" width="100" height="100" /></li>
                <li><img src="~/SystemImages/4f411a319e2e4992a42db1e518238c7d.png" class="default-image imgs" alt="預設圖片 3" width="100" height="100" /></li>
            </div>
         
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSuscribe" /> @Html.DisplayNameFor(model => model.IsSuscribe)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="註冊" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        const radioA = document.getElementById("radioA");
        const divA = document.getElementById("divA");

        radioA.addEventListener("click", function () {
            // Toggle the display style of Div A
            divA.style.display = (divA.style.display === "none") ? "block" : "none";
        });

        $("#imageId").click(function () {
            var src = $(this).attr('src');
            var nameAr = src.split('/');
            alert(nameAr[nameAr.length - 1]);

        });
    </script>
}
