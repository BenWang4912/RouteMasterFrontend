@model RouteMasterFrontend.Models.ViewModels.Members.MemberResetPasswordVM

@{
    ViewData["Title"] = "MemberResetPassword";
    string account = Context.Request.Query["Account"];
    string confirmCode = Context.Request.Query["confirmCode"];
}

<h1>MemberResetPassword</h1>

<h4>MemberResetPasswordVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MemberResetPassword" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" name="account" value="@account" />
            <input type="hidden" name="confirmCode" value="@confirmCode" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
