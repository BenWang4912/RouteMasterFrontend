@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown-cart">
        <a id="cartOpen" class="cart-icon-link" href="#">
            <i class="fas fa-shopping-cart cart-icon"></i>
        </a>
        <div class="dropdown-cart-content">
            @if (ViewBag.CartId == null)
            {
                <div class="dropdown-cart-item">@await Component.InvokeAsync("EmptyCart")</div>
            }
            else
            {
                <div class="dropdown-cart-item">@await Component.InvokeAsync("ExtraServicesDetails", new { ViewBag.CartId })</div>
                <div class="dropdown-cart-item">@await Component.InvokeAsync("ActivitiesDetails", new { ViewBag.CartId })</div>
                <div class="dropdown-cart-item">@await Component.InvokeAsync("AccomodationDetails", new { ViewBag.CartId })</div>
            }
            <div class="dropdown-cart-footer">
                <button class="btn btn-secondary view-cart-button" onclick="window.location.href='/Carts/Index'">
                    <i class="fas fa-shopping-cart"></i> 查看購物車
                </button>
            </div>
        </div>
    </div>
}
