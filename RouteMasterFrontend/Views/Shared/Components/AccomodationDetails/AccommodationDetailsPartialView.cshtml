@model IEnumerable<RouteMasterFrontend.EFModels.Cart_AccommodationDetail>
@section style{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


}
<style>
    /* 移除上下的水平分隔線 */
    .partial-view-container table {
        border-collapse: collapse;
    }

    /*.partial-view-container table th,*/
    .partial-view-container table td {
        border: none;
    }

    #cartTable3 tbody tr {
        border-top: none; /* Remove border above each row */
    }

    /* Optional: Add padding to the cells for better spacing */
    #cartTable3 tbody td {
        padding: 8px;
    }

    /* Add this style to remove border between thead and tbody */
    #cartTable3 thead th {
        border-bottom: none;
    }
</style>
<head>
    <meta name="viewport" content="width=device-width" />
    @* <title>My Razor View</title>*@
    <script src="https://kit.fontawesome.com/c3bf7d3bbb.js" crossorigin="anonymous"></script>
</head>
    
<div class="partial-view-container">
    <table class="table" id="cartTable3">
    <thead>
        <tr>
            <th>
           @*     @Html.DisplayNameFor(model => model.RoomProduct.Room.Accommodation.Name)
                @Html.DisplayNameFor(model => model.RoomProduct.Room.Name)*@
            </th>
            <th>
              @*  @Html.DisplayNameFor(model => model.RoomProduct.Date)*@
            </th>
            <th>
              @*  @Html.DisplayNameFor(model => model.Quantity)*@
            </th>
            <th>
              @*  @Html.DisplayNameFor(model => model.RoomProduct)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                <tr data-roomProductId="@item.RoomProductId">
            <td>

                @Html.DisplayFor(modelItem => item.RoomProduct.Room.Accommodation.Name)
                @Html.DisplayFor(modelItem => item.RoomProduct.Room.Name)
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomProduct.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomProduct.NewPrice)
            </td>
            <td>


                        <a href="#" onclick="removeFromAcc( @item.Id)">
                            <i class="fas fa-trash-can"></i>
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<script>
    function removeFromAcc(roomProductId) {
        $.ajax({
            url: '/Carts/RemoveAccommodationFromCart',
            type: 'POST',
            data: { roomProductId: roomProductId },
            success: function (result) {
                if (result.success) {
                    alert(result.message);
                    $('#cartTable3').find('tr[data-roomProductId="' + result.roomProductId + '"]').remove();
                    reloadCartItems();
                } else {
                    alert(result.message);
                }
            },
            error: function () {
                console.log('66666');
                alert('An error occurred, unable to delete item.');
            }
        });
    }
    function reloadCartItems() {
        $.ajax({
            url: '/Carts/RefreshCart',
            type: 'GET',
            success: function (data) {

                $('#Cart').html(data);
            },


            error: function () {
                alert('Failed to reload cart items.');
            }
        });
    }

</script>

