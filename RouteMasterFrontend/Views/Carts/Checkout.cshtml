@model IEnumerable<RouteMasterFrontend.EFModels.Cart>

@{
    ViewData["Title"] = "Checkout";
   
}

<h1>Checkout</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="CheckoutPost" method="post">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                Member Info
            </th>
            <th>
                Payment Method
            </th>
            <th></th>
            
        </tr>
      
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Account)
            </td>
                <td>
                   
                @Html.DisplayFor(modelItem => item.Member.FirstName)
                @Html.DisplayFor(modelItem => item.Member.LastName)
                  
                </td>
                <td>
                   
                    <select>
                        @foreach (var paymentMethod in ViewBag.PaymentMethods)
                        {
                            <option value="@paymentMethod.Id">@paymentMethod.Name</option>
                        }
                    </select>
                   
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
  </table>
    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    <script>
       
    </script>
}
